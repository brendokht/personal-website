{
  "name": "personal-website",
  "type": "module",
  "version": "3.0.0",
  "scripts": {
    "dev": "astro dev --host",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "check": "biome check --write",
    "lint": "biome lint --write",
    "check-types": "tsc --noEmit",
    "format": "biome format --write .",
    "prepare": "husky"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.13",
    "@lucide/astro": "^0.562.0",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "astro": "^5.16.14",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,astro}": ["bash -c 'tsc --noEmit'"],
    "*.{js,ts,jsx,tsx,astro,json,css,scss,md,mdx,html}": [
      "biome check --write --no-errors-on-unmatched --skip-parse-errors"
    ]
  },
  "private": true,
  "peerDependencies": {
    "typescript": "^5.9.3"
  }
}
