{
  "name": "personal-website-v2",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev --host",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "check": "biome check --write",
    "lint": "biome lint --write",
    "check-types": "tsc --noEmit",
    "format": "biome format --write .",
    "prepare": "husky"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.6",
    "@lucide/astro": "^0.545.0",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.18",
    "astro": "^5.14.1",
    "personal-website-v2": "file:",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,astro}": ["bash -c 'tsc --noEmit'"],
    "*.{js,ts,jsx,tsx,astro,json,css,scss,md,mdx,html}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "private": true,
  "peerDependencies": {
    "typescript": "^5"
  }
}
