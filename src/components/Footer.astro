---
import githubLogo from "../images/github-mark-white.png";
import linkedinLogo from "../images/linkedin-bug.png";
import xLogo from "../images/x-white.png";
import Copyright from "./Copyright.astro";
import Social from "./Social.astro";
---

<footer class="mt-auto bg-black pt-6 pb-2 text-white lg:pt-2">
  <div
    class="mt-4 flex h-36 flex-col items-center justify-evenly gap-8 md:mt-0 md:flex-row"
  >
    <div class="flex flex-row justify-center">
      <div class="inline-flex">
        <span class="px-1 text-5xl font-bold">B</span><span
          class="flex items-end text-xl tracking-[0.3em]">renden</span
        >
      </div>
      <div class="inline-flex">
        <span class="px-1 text-5xl font-bold">K</span><span
          class="align flex items-end text-xl tracking-[0.3em]">ohut</span
        >
      </div>
    </div>
    <div class="w-full md:w-1/3">
      <div class="text-center text-2xl font-bold">Socials</div>
      <div class="flex flex-row items-center justify-evenly py-4">
        <Social
          href="https://github.com/brendokht"
          imageSrc={githubLogo}
          imageAlt="GitHub logo"
        />
        <Social
          href="https://linkedin.com/in/brendenkohut"
          imageSrc={linkedinLogo}
          imageAlt="LinkedIn logo"
        />
        <Social
          href="https://x.com/brendokht"
          imageSrc={xLogo}
          imageAlt="X logo"
        />
      </div>
    </div>
  </div>
  <Copyright />
</footer>
