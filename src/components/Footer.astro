---
import githubLogo from "../images/github-mark-white.png";
import linkedinLogo from "../images/linkedin-bug.png";
import xLogo from "../images/x-white.png";
import Copyright from "./Copyright.astro";
import Social from "./Social.astro";
---

<footer class="mt-auto bg-black text-white pb-2 pt-6 lg:pt-2">
    <div
        class="flex flex-col md:flex-row h-36 items-center justify-evenly gap-8 mt-4 md:mt-0"
    >
        <div class="flex flex-row justify-center">
            <div class="inline-flex">
                <span class="text-5xl font-bold px-1">B</span><span
                    class="flex items-end tracking-[0.3em] text-xl">renden</span
                >
            </div>
            <div class="inline-flex">
                <span class="text-5xl font-bold px-1">K</span><span
                    class="flex items-end align tracking-[0.3em] text-xl"
                    >ohut</span
                >
            </div>
        </div>
        <div class="w-full md:w-1/3">
            <div class="text-center font-bold text-2xl">Socials</div>
            <div class="flex flex-row justify-evenly items-center py-4">
                <Social
                    href="https://github.com/brendokht"
                    imageSrc={githubLogo}
                    imageAlt="GitHub logo"
                />
                <Social
                    href="https://linkedin.com/in/brendenkohut"
                    imageSrc={linkedinLogo}
                    imageAlt="LinkedIn logo"
                />
                <Social
                    href="https://x.com/brendokht"
                    imageSrc={xLogo}
                    imageAlt="X logo"
                />
            </div>
        </div>
    </div>
    <Copyright />
</footer>
