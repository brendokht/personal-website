---
const { reference } = Astro.props;
---

<a href={reference}>
    <section
        class="w-72 min-h-72 max-h-96 bg-white p-2 rounded-md flex flex-col hover:scale-110 cursor-pointer duration-500 ease-in-out"
    >
        <div class="flex justify-center w-full">
            <slot name="image" />
        </div>
        <div class="py-1 text-lg font-semibold">
            <slot name="title" />
        </div>
        <div class="flex-grow text-neutral-500 text-sm">
            <slot name="description" />
        </div>
    </section>
</a>
