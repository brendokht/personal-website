---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import Title from "../components/Title.astro";

const { title, tabTitle } = Astro.props;
---

<html lang="en" class="bg-black">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta
            name="description"
            content="Personal website for Brenden Kohut, a full-stack developer based in Ontario, Canada."
        />
        <meta name="generator" content={Astro.generator} />
        <title>{tabTitle ?? title}</title>
    </head>
    <body
        class="flex flex-col min-h-screen bg-gradient-to-br from-white to-stone-400"
    >
        <Navbar />
        <main class="flex flex-col flex-grow pt-16 min-h-screen">
            <Title title={title} />
            <slot />
        </main>
        <Footer />
    </body>
</html>
