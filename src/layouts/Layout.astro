---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

const { title } = Astro.props;
---

<html lang="en" id="top" class="scroll-smooth bg-black">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width initial-scale=1.0" />
    <meta
      name="description"
      content="Personal website for Brenden Kohut, a full-stack developer based in Ontario, Canada."
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? `Brenden Kohut - ${title}` : "Brenden Kohut"}</title>
  </head>
  <body
    class="flex min-h-screen flex-col bg-linear-to-br from-[#9796f0] to-[#fbc7d4] text-black dark:from-[#0f0c29] dark:via-[#302b63] dark:to-[#24243e] dark:text-white"
  >
    <Navbar />
    <main class="flex min-h-screen grow flex-col items-center px-4 pt-16">
      <div class="flex min-h-screen flex-col gap-20 md:w-[768px]">
        <slot />
      </div>
    </main>
    <Footer />
  </body>
</html>
