---
import Layout from "./Layout.astro";

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title} webTitle={frontmatter.webTitle}>
    <section
        class="flex flex-col w-full justify-start items-center mb-8 text-xl flex-grow px-8"
    >
        <div
            class="flex flex-col justify-start w-full md:w-3/4 xl:w-2/3 prose dark:prose-invert prose-lg lg:prose-xl prose-purple"
        >
            <slot />
        </div>
    </section>
</Layout>
