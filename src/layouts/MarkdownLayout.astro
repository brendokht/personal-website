---
import Layout from "./Layout.astro";
import "../styles/global.css";
import Title from "../components/Title.astro";

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
    <Title title={frontmatter.title} />
    <section
        class="mb-8 flex w-full grow flex-col items-center justify-start px-4 text-xl"
    >
        <div
            class="prose dark:prose-invert prose-lg lg:prose-xl prose-orange flex w-full flex-col justify-start md:w-3/4 xl:w-2/3"
        >
            <slot />
        </div>
    </section>
</Layout>
