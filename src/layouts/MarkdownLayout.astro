---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import Title from "../components/Title.astro";

const { frontmatter } = Astro.props;
---

<html lang="en" class="bg-black">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta
            name="description"
            content="Personal website for Brenden Kohut, a full-stack developer based in Ontario, Canada."
        />
        <meta name="generator" content={Astro.generator} />
        <title>{frontmatter.webTitle}</title>
    </head>
    <body
        class="flex flex-col min-h-screen bg-gradient-to-br from-white to-stone-400"
    >
        <Navbar />
        <main class="flex flex-col flex-grow pt-16 min-h-screen">
            <Title title=`${frontmatter.title}` />
            <section
                class="flex flex-col w-full justify-start items-center py-8 text-xl flex-grow px-8"
            >
                <div
                    class="flex flex-col justify-start w-full md:w-3/4 xl:w-2/3 prose prose-lg lg:prose-xl prose-purple"
                >
                    <slot />
                </div>
            </section>
        </main>
        <Footer />
    </body>
</html>
