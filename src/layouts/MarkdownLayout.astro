---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

const { frontmatter } = Astro.props;
---

<html lang="en" class="bg-black">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta
            name="description"
            content="Personal website for Brenden Kohut, a full-stack developer based in Ontario, Canada."
        />
        <meta name="generator" content={Astro.generator} />
        <title>{frontmatter.webTitle}</title>
    </head>
    <body
        class="flex flex-col min-h-screen bg-gradient-to-br from-white to-stone-400"
    >
        <Navbar />
        <main class="flex flex-col flex-grow pt-16">
            <section class="flex justify-center min-h-64">
                <div
                    class="flex flex-col flex-1 justify-center items-center px-4 max-w-3xl"
                >
                    <h1
                        class="text-5xl md:text-6xl text-center font-semibold pt-8 leading-tight"
                    >
                        {frontmatter.title}
                    </h1>
                </div>
            </section>
            <section
                class="flex flex-col w-full justify-start items-center py-8 text-xl flex-grow px-8 md:px-16"
            >
                <slot />
            </section>
            <Footer />
        </main>
    </body>
</html>
