---
import { Image } from "astro:assets";
import massMessageAppImg from "../images/mass-message-app.png";
import personalSiteImg from "../images/personal-website.png";
import placeholderImg from "../images/placeholder.png";
import Layout from "../layouts/Layout.astro";
import ProjectContainer from "../components/ProjectContainer.astro";
import Title from "../components/Title.astro";
---

<Layout title="Home">
    <Title title="Hey, I'm Brenden Kohut" />
    <p class="text-lg md:text-xl text-center">
        A Full-stack Developer dedicated to building scalable and high-quality
        applications that drive results.
    </p>
    <section
        class="flex flex-col w-full justify-start items-center my-8 flex-grow"
    >
        <h2 class="font-semibold text-4xl pb-14 text-center">
            Notable Projects
        </h2>
        <div
            class="flex md:flex-row flex-wrap justify-evenly items-center px-8 lg:gap-16 gap-8"
        >
            <ProjectContainer reference="projects/mass-message-app">
                <Image
                    loading="eager"
                    slot="image"
                    src={massMessageAppImg}
                    class="rounded-md max-h-56 w-auto"
                    alt="Send email screen of Mass Message App"
                />
                <h2 slot="title">Mass Message App</h2>
                <p slot="description">
                    A school project for my Mobile Development class. Users can
                    import their contacts so they can send a message or email to
                    multiple of them separately.
                </p>
            </ProjectContainer>
            <ProjectContainer reference="projects/personal-website">
                <Image
                    loading="eager"
                    slot="image"
                    src={personalSiteImg}
                    class="rounded-md max-h-56 w-auto"
                    alt="Calculator main page"
                />
                <h3 slot="title">Personal Website</h3>
                <p slot="description">
                    The website you're currently viewing! Just a simple,
                    minimalistic website to give viewers more information about
                    me and show off some of my projects that I do during my time
                    at school and on the side.
                </p>
            </ProjectContainer>
            <ProjectContainer reference="projects/championsgg">
                <Image
                    loading="eager"
                    slot="image"
                    src={placeholderImg}
                    class="rounded-md max-h-56 w-auto"
                    alt="Placeholder for work in progress project"
                />
                <h3 slot="title">Champions GG</h3>
                <p slot="description">
                    A work in progress web application, that is an Esports
                    tournament and league hosting platform, It will offer
                    simplistic and user-friendly hosting, allowing anyone to
                    host events.
                </p>
            </ProjectContainer>
        </div>
    </section>
</Layout>
