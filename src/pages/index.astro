---
import { Image } from "astro:assets";
import massMessageAppImg from "../images/mass-message-app.png";
import personalSiteImg from "../images/personal-website.png";
import placeholderImg from "../images/placeholder.png";
import Layout from "../layouts/Layout.astro";
import ProjectContainer from "../components/ProjectContainer.astro";
import Title from "../components/Title.astro";
---

<Layout title="Home">
    <Title title="Hey, I'm Brenden Kohut" />
    <p class="text-lg md:text-xl text-center">
        A Full-stack Developer dedicated to building scalable and high-quality
        applications that drive results.
    </p>
    <section
        class="flex flex-col w-full justify-start items-center my-8 flex-grow"
    >
        <h2 class="font-semibold text-4xl pb-14 text-center">
            Notable Projects
        </h2>
        <div
            class="flex md:flex-row flex-wrap justify-evenly items-center px-8 lg:gap-16 gap-8"
        >
            <ProjectContainer reference="projects/chat-system">
                <Image
                    loading="eager"
                    slot="image"
                    src={placeholderImg}
                    class="rounded-md max-h-56 w-auto"
                    alt="Main screen of Chat System app"
                />
                <h3 slot="title">Chat System</h3>
                <p slot="description">
                    A school project for my advanced mobile development class.
                    Users can register and log in, search up their other people
                    by their usernames, and begin chatting in real time.
                </p>
            </ProjectContainer>
            <ProjectContainer reference="cacatua">
                <Image
                    loading="eager"
                    slot="image"
                    src={placeholderImg}
                    class="rounded-md max-h-56 w-auto"
                    alt="Main screen of Cacatua application"
                />
                <h3 slot="title">Cacatua</h3>
                <p slot="description">
                    A capstone project for my managing software projects class.
                    It is an open source
                    <cite>Discord</cite>-like desktop application, geared
                    towards project management.
                </p>
            </ProjectContainer>
            <ProjectContainer reference="projects/championsgg">
                <Image
                    loading="eager"
                    slot="image"
                    src={placeholderImg}
                    class="rounded-md max-h-56 w-auto"
                    alt="Placeholder for work in progress project"
                />
                <h3 slot="title">Champions GG</h3>
                <p slot="description">
                    A work in progress web application, that is an Esports
                    tournament and league hosting platform, It will offer
                    simplistic and user-friendly hosting, allowing anyone to
                    host events.
                </p>
            </ProjectContainer>
        </div>
    </section>
</Layout>
