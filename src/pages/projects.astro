---
import { Image } from "astro:assets";
import massMessageApp from "../images/mass-message-app.png";
import odinCalculator from "../images/odin-calculator.png";
import placeholder from "../images/placeholder.png";
import personalWebsite from "../images/personal-website.png";
import ProjectContainer from "../components/ProjectContainer.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Projects">
    <section class="flex justify-center min-h-64">
        <div
            class="flex flex-col flex-1 justify-center items-center px-4 max-w-3xl"
        >
            <h1
                class="text-5xl md:text-6xl text-center font-semibold py-8 leading-tight"
            >
                Projects
            </h1>
        </div>
    </section>
    <section
        class="flex flex-col w-full justify-start items-center my-8 flex-grow"
    >
        <div
            class="flex md:flex-row flex-wrap justify-evenly items-center px-8 lg:gap-16 gap-8"
        >
            <ProjectContainer reference="mass-message-app">
                <Image
                    slot="image"
                    src={massMessageApp}
                    class="rounded-md max-h-56 w-auto"
                    alt="Image of Mass Message App"
                />
                <h2 slot="title">Mass Message App</h2>
                <p slot="description">
                    A school project for my Mobile Development class. Users can
                    import their contacts so they can send a message or email to
                    multiple of them separately.
                </p>
            </ProjectContainer>
            <ProjectContainer reference="personal-website">
                <Image
                    slot="image"
                    src={personalWebsite}
                    class="rounded-md max-h-56 w-auto"
                    alt="Image of Calculator Website"
                />
                <h3 slot="title">Personal Website</h3>
                <p slot="description">
                    The website you're currently viewing! Just a simple,
                    minimalistic website to give viewers more information about
                    me and show off some of my projects that I do during my time
                    at school and on the side.
                </p>
            </ProjectContainer>
            <ProjectContainer reference="blogging-website">
                <Image
                    slot="image"
                    src={placeholder}
                    class="rounded-md max-h-56 w-auto"
                    alt="No image yet, sorry!"
                />
                <h3 slot="title">Blogging Website</h3>
                <p slot="description">
                    A work in progress web application, that will allow users to
                    sign up and post blog posts using a Markdown editor, comment
                    on others' posts, and browse posts, even if they are not
                    registered.
                </p>
            </ProjectContainer>
            <ProjectContainer reference="calculator">
                <Image
                    slot="image"
                    src={odinCalculator}
                    class="rounded-md max-h-56 w-auto"
                    alt="Image of Calculator Website"
                />
                <h3 slot="title">Calculator</h3>
                <p slot="description">
                    A simple calculator website, done while doing parts of the
                    Odin Project. Supports basic some intermediate math
                    operations.
                </p>
            </ProjectContainer>
        </div>
    </section>
</Layout>
